{
    "entity": "Schedule",
    "description": "Расписание занятий (trainings_hst).",
    "columns": [
        {
            "name": "date",
            "type": "date",
            "format": [
                "DD.MM.",
                "DD.MM",
                "DD.MM.YY",
                "DD.MM.YYYY"
            ],
            "required": true
        },
        {
            "name": "start_time",
            "type": "time",
            "required": true,
            "default": "09:00"
        },
        {
            "name": "end_time",
            "type": "time",
            "required": true,
            "default": "09:30"
        },
        {
            "name": "employee",
            "type": "string",
            "required": false
        },
        {
            "name": "client_full",
            "type": "string",
            "required": false,
            "description": "ФИО клиента"
        },
        {
            "name": "status",
            "type": "string",
            "required": true,
            "default": "Свободно"
        },
        {
            "name": "product_type",
            "type": "string",
            "required": false
        },
        {
            "name": "product_category",
            "type": "string",
            "required": false
        },
        {
            "name": "comment",
            "type": "string",
            "required": false
        }
    ],
    "unique_keys": [
        "date",
        "start_time",
        "client_full"
    ]
}