            "format": [
                "DD.MM.YY",
                "DD.MM.YYYY",
                "YYYY-MM-DD"
            ],
            "required": true
        },
        {
            "name": "client_full",
            "type": "string",
            "required": true
        },
        {
            "name": "product",
            "type": "string",
            "required": true
        },
        {
            "name": "product_type",
            "type": "string",
            "required": false
        },
        {
            "name": "product_category",
            "type": "string",
            "required": false
        },
        {
            "name": "quantity",
            "type": "integer",
            "required": false,
            "default": 1
        },
        {
            "name": "full_price",
            "type": "money",
            "required": false
        },
        {
            "name": "final_price",
            "type": "money",
            "required": false
        }
